#!/usr/bin/env bash

set -eu pipefail

source "$DOTLY_PATH/scripts/core/_main.sh"
source "$DOTFILES_PATH/scripts/self/utils/fonts-setup.sh"
source "$DOTFILES_PATH/scripts/self/utils/install.sh"

##? Install the linux packages needed
#?? 1.0.0
##?
##? Usage:
##?   install_custom

if grep -qEi "(archlinux)" /proc/version &>/dev/null; then
  log::note "Installing ArchLinux ğŸ§ packages"
  install_arch_common_packages
  log::note "Installing Linux ğŸ§ extras"
  # install_arch_linux_extra
  log::note "Installing fonts "
  install_fonts
elif grep -qEi "(manjaro)" /proc/version &>/dev/null; then
  log::note "Installing ArchLinux ğŸ§ packages"
  install_arch_common_packages
  log::note "Installing Linux ğŸ§ extras"
  # install_arch_linux_extra
  log::note "Installing fonts "
  install_fonts
  log::note "Installing NVM "
elif grep -qEi "(cachyos)" /proc/version &>/dev/null; then
  log::note "Installing ArchLinux ğŸ§ packages"
  install_arch_common_packages
  log::note "Installing Linux ğŸ§ extras"
  # install_arch_linux_extra
  log::note "Installing fonts "
  install_fonts
  log::note "Installing NVM "
elif grep -qEi "(ubuntu)" /proc/version &>/dev/null; then
  log::note "Installing fonts "
  log::note "Installing Linux ğŸ§ packages"
  install_common_packages
  install_fonts
  install_flatpak
  install_linux_extra
  # install_nvm
elif grep -qEi "(microsoft|WSL)" /proc/version &>/dev/null; then
  log::note "Linux ğŸ§ extras are not required on WSL ğŸ˜…"
  # install_nvm
  install_common_packages
  install_wslu
  log::note "WSL utils installed âœ…"
fi

